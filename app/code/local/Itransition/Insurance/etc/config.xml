<?xml version="1.0"?>
<config>
    <modules>
        <Itransition_Insurance>
            <version>1.0.0</version>
        </Itransition_Insurance>
    </modules>
    <global>
        <helpers>
            <itransition_insurance>
                <class>Itransition_Insurance_Helper</class>
            </itransition_insurance>
        </helpers>

        <models>
            <itransition_insurance>
                <class>Itransition_Insurance_Model</class>
            </itransition_insurance>
        </models>

        <blocks>
            <itransition_insurance>
                <class>Itransition_Insurance_Block</class>
            </itransition_insurance>
        </blocks>

        <sales>
            <quote>
                <totals>
                    <insurance>
                        <class>Itransition_Insurance_Model_Sales_Quote</class>
                        <after>subtotal,tax</after>
                        <before>grand_total</before>
                        <admin_renderer>itransition_insurance/adminhtml_sales_order_create_totals</admin_renderer>
                    </insurance>
                </totals>
            </quote>

            <order_invoice>
                <totals>
                    <insurance>
                        <class>Itransition_Insurance_Model_Sales_Invoice</class>
                        <after>subtotal</after>
                    </insurance>
                </totals>
            </order_invoice>

            <order_creditmemo>
                <totals>
                    <insurance>
                        <class>Itransition_Insurance_Model_Sales_Creditmemo</class>
                        <after>subtotal</after>
                    </insurance>
                </totals>
            </order_creditmemo>
        </sales>

        <events>
            <checkout_controller_onepage_save_shipping_method>
                <observers>
                    <insurance_to_address>
                        <type>singleton</type>
                        <class>itransition_insurance/observer</class>
                        <method>setInsurance</method>
                    </insurance_to_address>
                </observers>
            </checkout_controller_onepage_save_shipping_method>

            <adminhtml_sales_order_create_process_data_before>
                <observers>
                    <insurance_to_address>
                        <type>singleton</type>
                        <class>itransition_insurance/observer</class>
                        <method>setInsuranceOnCreateOrder</method>
                    </insurance_to_address>
                </observers>
            </adminhtml_sales_order_create_process_data_before>

            <checkout_controller_multishipping_shipping_post>
                <observers>
                    <insurance_to_address_multi>
                        <type>singleton</type>
                        <class>itransition_insurance/observer</class>
                        <method>setMultiShippingInsurance</method>
                    </insurance_to_address_multi>
                </observers>
            </checkout_controller_multishipping_shipping_post>

            <core_copy_fieldset_customer_address_to_quote_address>
                <observers>
                    <unset_insurance_in_billing_address>
                        <type>singleton</type>
                        <class>itransition_insurance/observer</class>
                        <method>unsInsuranceInBilling</method>
                    </unset_insurance_in_billing_address>
                </observers>
            </core_copy_fieldset_customer_address_to_quote_address>

            <sales_quote_address_save_before>
                <observers>
                    <set_insurance_to_address>
                        <type>singleton</type>
                        <class>itransition_insurance/observer</class>
                        <method>setInsuranceEstimate</method>
                    </set_insurance_to_address>
                </observers>
            </sales_quote_address_save_before>

            <paypal_prepare_line_items>
                <observers>
                    <add_insurance_to_paypal>
                        <type>singleton</type>
                        <class>itransition_insurance/observer</class>
                        <method>prepareItemsPaypal</method>
                    </add_insurance_to_paypal>
                </observers>
            </paypal_prepare_line_items>
        </events>

        <resources>
            <itransition_insurance_setup>
                <setup>
                    <module>Itransition_Insurance</module>
                    <class>Mage_Customer_Model_Entity_Setup</class>
                </setup>
            </itransition_insurance_setup>
        </resources>

        <fieldsets>
            <sales_convert_quote_address>
                <insurance>
                    <to_order_address>*</to_order_address>
                </insurance>
                <base_insurance>
                    <to_order_address>*</to_order_address>
                </base_insurance>
            </sales_convert_quote_address>
            <sales_convert_order_address>
                <insurance>
                    <to_quote_address>*</to_quote_address>
                </insurance>
                <base_insurance>
                    <to_quote_address>*</to_quote_address>
                </base_insurance>
            </sales_convert_order_address>
        </fieldsets>

        <pdf>
            <totals>
                <itransition_insurance translate="title">
                    <title>Insurance</title>
                    <source_field>insurance</source_field>
                    <model>Itransition_Insurance_Model_Pdf_Total</model>
                    <font_size>7</font_size>
                    <display_zero>0</display_zero>
                    <sort_order>300</sort_order>
                </itransition_insurance>
            </totals>
        </pdf>
    </global>

    <adminhtml>
        <layout>
            <updates>
                <itransition_insurance>
                    <file>itransition/insurance.xml</file>
                </itransition_insurance>
            </updates>
        </layout>
    </adminhtml>

    <frontend>
        <layout>
            <updates>
                <itransition_insurance>
                    <file>itransition/insurance.xml</file>
                </itransition_insurance>
            </updates>
        </layout>
    </frontend>
</config>