<?xml version="1.0"?>
<config>
    <modules>
        <Itransition_Insurance>
            <version>1.0.0</version>
        </Itransition_Insurance>
    </modules>
    <global>
        <helpers>
            <it_insurance>
                <class>Itransition_Insurance_Helper</class>
            </it_insurance>
        </helpers>
        <models>
            <it_insurance>
                <class>Itransition_Insurance_Model</class>
            </it_insurance>
        </models>
        <blocks>
            <it_insurance>
                <class>Itransition_Insurance_Block</class>
            </it_insurance>
            <it_insurance_admin>
                <class>Itransition_Insurance_Block_Adminhtml</class>
            </it_insurance_admin>
        </blocks>
        <events>
            <checkout_controller_onepage_save_shipping_method>
                <observers>
                    <insurance_to_address>
                        <class>it_insurance/observer</class>
                        <method>setInsurance</method>
                    </insurance_to_address>
                </observers>
            </checkout_controller_onepage_save_shipping_method>
            <checkout_controller_multishipping_shipping_post>
                <observers>
                    <insurance_to_address_multi>
                        <class>it_insurance/observer</class>
                        <method>setMultiShippingInsurance</method>
                    </insurance_to_address_multi>
                </observers>
            </checkout_controller_multishipping_shipping_post>
            <core_copy_fieldset_customer_address_to_quote_address>
                <observers>
                    <unset_insurance_in_billing_address>
                        <class>it_insurance/observer</class>
                        <method>unsInsuranceInBilling</method>
                    </unset_insurance_in_billing_address>
                </observers>
            </core_copy_fieldset_customer_address_to_quote_address>
        </events>
        <resources>
            <insurance_setup>
                <setup>
                    <module>Itransition_Insurance</module>
                    <class>Mage_Customer_Model_Entity_Setup</class>
                </setup>
            </insurance_setup>
        </resources>
        <fieldsets>
            <customer_address>
                <insurance>
                    <to_quote_address>*</to_quote_address>
                </insurance>
            </customer_address>
            <sales_convert_quote_address>
                <insurance>
                    <to_order_address>*</to_order_address>
                    <to_customer_address>*</to_customer_address>
                </insurance>
            </sales_convert_quote_address>
            <sales_convert_order_address>
                <insurance>
                    <to_quote_address>*</to_quote_address>
                </insurance>
            </sales_convert_order_address>
        </fieldsets>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <insurance_admin>
                    <file>itransition/insurance.xml</file>
                </insurance_admin>
            </updates>
        </layout>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <insurance_front>
                    <file>itransition/insurance.xml</file>
                </insurance_front>
            </updates>
        </layout>
    </frontend>
</config>