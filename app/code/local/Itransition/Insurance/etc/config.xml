<?xml version="1.0"?>
<config>
    <modules>
        <Itransition_Insurance>
            <version>1.0.0</version>
        </Itransition_Insurance>
    </modules>
    <global>
        <helpers>
            <it_insurance>
                <class>Itransition_Insurance_Helper</class>
            </it_insurance>
        </helpers>

        <models>
            <it_insurance>
                <class>Itransition_Insurance_Model</class>
            </it_insurance>
        </models>

        <blocks>
            <it_insurance>
                <class>Itransition_Insurance_Block</class>
            </it_insurance>
            <it_insurance_admin>
                <class>Itransition_Insurance_Block_Adminhtml</class>
            </it_insurance_admin>

            <adminhtml>
                <rewrite>
                    <sales_order_totals>Itransition_Insurance_Block_Adminhtml_Sales_Order_Totals</sales_order_totals>
                    <sales_order_invoice_totals>Itransition_Insurance_Block_Adminhtml_Sales_Order_Invoice_Totals</sales_order_invoice_totals>
                    <sales_order_creditmemo_totals>Itransition_Insurance_Block_Adminhtml_Sales_Order_Creditmemo_Totals</sales_order_creditmemo_totals>
                </rewrite>
            </adminhtml>

        </blocks>

        <sales>
            <quote>
                <totals>
                    <insurance>
                        <class>Itransition_Insurance_Model_Sales_Quote</class>
                        <after>subtotal,tax</after>
                    </insurance>
                </totals>
            </quote>

            <order_invoice>
                <totals>
                    <insurance>
                        <class>Itransition_Insurance_Model_Sales_Invoice</class>
                        <after>subtotal</after>
                    </insurance>
                </totals>
            </order_invoice>

            <order_creditmemo>
                <totals>
                    <insurance>
                        <class>Itransition_Insurance_Model_Sales_Creditmemo</class>
                        <after>subtotal</after>
                    </insurance>
                </totals>
            </order_creditmemo>
        </sales>

        <events>
            <checkout_controller_onepage_save_shipping_method>
                <observers>
                    <insurance_to_address>
                        <class>it_insurance/observer</class>
                        <method>setInsurance</method>
                    </insurance_to_address>
                </observers>
            </checkout_controller_onepage_save_shipping_method>
            <checkout_controller_multishipping_shipping_post>
                <observers>
                    <insurance_to_address_multi>
                        <class>it_insurance/observer</class>
                        <method>setMultiShippingInsurance</method>
                    </insurance_to_address_multi>
                </observers>
            </checkout_controller_multishipping_shipping_post>
            <core_copy_fieldset_customer_address_to_quote_address>
                <observers>
                    <unset_insurance_in_billing_address>
                        <class>it_insurance/observer</class>
                        <method>unsInsuranceInBilling</method>
                    </unset_insurance_in_billing_address>
                </observers>
            </core_copy_fieldset_customer_address_to_quote_address>
            <sales_quote_address_save_before>
                <observers>
                    <set_insurance_to_address>
                        <class>it_insurance/observer</class>
                        <method>setInsuranceEstimate</method>
                    </set_insurance_to_address>
                </observers>
            </sales_quote_address_save_before>
        </events>

        <resources>
            <insurance_setup>
                <setup>
                    <module>Itransition_Insurance</module>
                    <class>Mage_Customer_Model_Entity_Setup</class>
                </setup>
            </insurance_setup>
        </resources>

        <fieldsets>
            <sales_convert_quote_address>
                <insurance>
                    <to_order_address>*</to_order_address>
                </insurance>
                <base_insurance>
                    <to_order_address>*</to_order_address>
                </base_insurance>
            </sales_convert_quote_address>
            <sales_convert_order_address>
                <insurance>
                    <to_quote_address>*</to_quote_address>
                </insurance>
                <base_insurance>
                    <to_quote_address>*</to_quote_address>
                </base_insurance>
            </sales_convert_order_address>
        </fieldsets>
    </global>

    <adminhtml>
        <layout>
            <updates>
                <insurance_admin>
                    <file>itransition/insurance.xml</file>
                </insurance_admin>
            </updates>
        </layout>
    </adminhtml>

    <frontend>
        <layout>
            <updates>
                <insurance_front>
                    <file>itransition/insurance.xml</file>
                </insurance_front>
            </updates>
        </layout>
    </frontend>
</config>