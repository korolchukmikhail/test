<?xml version="1.0" ?>
<layout version="0.1.0">
    <checkout_onepage_index>
        <reference name="head">
            <action method="addCss" ifconfig="insurance/config/enabled">
                <name>css/itransition/insurance.css</name>
            </action>
        </reference>
    </checkout_onepage_index>

    <checkout_onepage_shippingmethod>
        <reference name="root">
            <action method="setTemplate" ifconfig="insurance/config/enabled">
                <template>itransition/insurance/checkout/onepage/shipping_method/available.phtml</template>
            </action>
        </reference>
    </checkout_onepage_shippingmethod>

    <checkout_multishipping_shipping>
        <reference name="head">
            <action method="addCss" ifconfig="insurance/config/enabled">
                <name>css/itransition/insurance.css</name>
            </action>
        </reference>
        <reference name="checkout_shipping">
            <action method="setTemplate" ifconfig="insurance/config/enabled">
                <template>itransition/insurance/checkout/multishipping/shipping.phtml</template>
            </action>
        </reference>
    </checkout_multishipping_shipping>

    <checkout_cart_index>
        <reference name="head">
            <action method="addCss" ifconfig="insurance/config/enabled">
                <name>css/itransition/insurance.css</name>
            </action>
        </reference>
        <reference name="checkout.cart.shipping">
            <action method="setTemplate" ifconfig="insurance/config/enabled">
                <template>itransition/insurance/checkout/cart/shipping.phtml</template>
            </action>
        </reference>
    </checkout_cart_index>

    <sales_email_order_items>
        <reference name="order_totals">
            <block type="itransition_insurance/adminhtml_sales_order_totals"
                   name="insurance.order.total"/>
        </reference>
    </sales_email_order_items>

    <sales_email_order_invoice_items>
        <reference name="invoice_totals">
            <block type="itransition_insurance/adminhtml_sales_order_invoice_totals"
                   name="insurance.order.invoice.total"/>
        </reference>
    </sales_email_order_invoice_items>

    <sales_email_order_creditmemo_items>
        <reference name="creditmemo_totals">
            <block type="itransition_insurance/adminhtml_sales_order_creditmemo_totals"
                   name="insurance.order.creditmemo.total"/>
        </reference>
    </sales_email_order_creditmemo_items>

</layout>